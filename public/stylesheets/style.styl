@import "lib/reset"
@import "lib/grid"
@import "lib/type"
@import "lib/css3"
@import "lib/forms"

// elements.styl requires and imports colors.styl. Which is where the below variables are from.
@import "lib/elements" 

body
  gradient(lighten(lightgray3,50%),lightgray2,lighten(darkgray3,150%))
  margin-top 60px 
  color color

h6
 color darken(lightgray1,30%)

h1
  border-bottom 1px solid color
  padding-bottom 16px

// Apply the Grid to the container

.container
  grid()
  shadow(0, 0, 12px, lighten(darkgray3,50%))
  background-color white
  border 1px solid lighten(darkgray3,60%)

// Apply the appropriate column Mixin to your elements 
// along with any other styles you like.

header
  grid_100()
  color color
  rgradient(25%, 50%, white,lightgray1)
  inshadow(0,0,16px,8px, darken(lightgray1,20%))
  large()

.header-inner 
  width 95.825%
  margin 20px
  padding 0px
  border 1px solid color
  h4
    margin 1.3em 4em 1.5em 4em
  h1  
    margin 1em 0 0 1em

.type1
  grid_20()
  h1
    border none
    padding-bottom 0px

.type2
  grid_30()

.type3
  grid_50()

.element
  grid_33()

.examplebuttonholder
  display block
  width 250px
  margin 0 auto 1.5em auto  

.fullexampleform
  grid_60()
  form            // Control the width of the form and center it if you like. Otherwise it will fill the column to 100%.
    width 450px
    margin 0 auto  

.formexplanation
  grid_40()


.horizontal-form-explanation
  grid_100()

.horizontal-form
  grid_33()

//CSS3
.placeholder
  grid_100()

.tabbed-box
  padding 10px
  border-top-right-radius 9px  
  border 1px solid color
  margin-right 1em

.footer
  grid_100()
  small()
  margin-top 1.5em  
  rgradient(80%, 0%, darken(lightgray1,40%),darkgray1)
  color lightgray2
  text-align center
  border-top 1px solid color


