// Gradients
// Vertical Gradient - A 3 color linear gradient from top-middle-bottom

gradient(beginning, middle, end)
  background-color end
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.19,end), color-stop(0.64,middle), color-stop(1,beginning))
  background-image -moz-linear-gradient(center bottom, end 19%, middle 64%, beginning 100%)
  background-image -o-linear-gradient(top,beginning,end)
  background-image linear-gradient(center bottom, end 19%, middle 64%, beginning 100%)

// Horoizontal Gradient - A 3 color linear gradient from the left-middle-right

hgradient(beginning, middle, end)
  background-color end
  background-image -webkit-gradient(linear, left top, right top, color-stop(0.19,end), color-stop(0.64,middle), color-stop(1,beginning))
  background-image -moz-linear-gradient(left center, end 19%, middle 64%, beginning 100%)
  background-image -o-linear-gradient(left, beginning, end)
  background-image linear-gradient(left center, end 19%, middle 64%, beginning 100%)

// Radial Gradient - A circular farthest-side radial gradient with these
// options (pos x, pos y, radial color, end color)

rgradient(x,y,r,e)
  background-color e
  background-image -moz-radial-gradient(x y, circle farthest-side, r, e 100%)
  background-image -webkit-gradient(radial, x y, 0px, x y, minWidth, from(r), to(e))
  background-image -webkit-radial-gradient(x y, circle, r, e)
  background-image -o-radial-gradient(x y, circle farthest-side, r, e 100%)
  background-image radial-gradient(x y, circle farthest-side, r, e 100%)

