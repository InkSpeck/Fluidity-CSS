#css3
  .css3-explanation
    grid-space(50%)
  .css3-mixins
    grid-space(50%)
    .mixin-list
      columns 2
      border-radius 10px
      ul
        list-style-type none

#gradients
  margin-bottom 2em
  .linear-gradient-explanation
    grid-space(25%)
    min-height 400px
  .linear-gradient-example-code
    grid-space(75%)
  .linear-gradient-sample
    grid-space(75%)
    #sample-1
      background-image linear-gradient(65deg, white, darker-color3)
    #sample-2
      background-image linear-gradient(to bottom left, lighter-color2 40%, darker-color3 70%, lighter-color3 100%)
  .radial-gradient-explanation
    grid-space(25%)
    min-height 400px
  .radial-gradient-example-code
    grid-space(75%)
  .radial-gradient-sample
    grid-space(75%)
    #sample-1
      background radial-gradient(at top right, white, darker-color1)
    #sample-2
      background radial-gradient(
        ellipse farthest-corner at 0% 100%, white 10%, darker-color1 50%, lighter-color2 70%
      )
    #sample-3
      background radial-gradient(circle closest-side at 40px 30px, white, darker-color3)
.gradient-sample
  grid-space(20%)
  height 100px
  border 1px solid lighter-color1
  margin-top 20px
  margin-left 2%
  h6
    position relative
    top -24px
    margin 0
    padding 0

footer
  background-color lighter-color2
  #copyright
    grid-space(100%)
    font-size .8em
    border-top 1px solid darken(lighter-color1, 10%)
    p
      margin 0.7em 1em 1em 1em
      text-align center


// Animation Elements
.shown
  opacity 1 !important

//Topbar Helixes

.topbar-inner
  .logo-animation
    .stage
      position absolute
      display block
      top 0
      left 0
      display block
      width 99%
      height 100%
      opacity 0
      transition all .2s linear
      overflow hidden
      .square-x
        position absolute
        left 89px
        top 26px
        display block
        width 40px
        height 200px
        z-index 2
        animation-name topbar-square-x
        animation-duration 3s
        animation-timing-function linear
        animation-delay 0s
        animation-iteration-count infinite
      .square-y
        display block
        width 40px
        height 40px
        z-index 2
        animation-name topbar-square-y
        animation-duration 3s
        animation-timing-function ease-in-out
        animation-delay 0s
        animation-iteration-count infinite
      .square
        display block
        width 5px
        height 5px
        background-color darken(lighter-color1,20%)
      .square2-x
        position absolute
        left 89px
        top 26px
        display block
        width 40px
        height 200px
        z-index 2
        animation-name topbar-square-x
        animation-duration 3s
        animation-timing-function linear
        animation-delay 0s
        animation-iteration-count infinite
      .square2-y
        display block
        width 40px
        height 40px
        z-index 2
        animation-name topbar-square2-y
        animation-duration 3s
        animation-timing-function ease-in-out
        animation-delay 0s
        animation-iteration-count infinite
      .square2
        display block
        width 5px
        height 5px
        background-color white

