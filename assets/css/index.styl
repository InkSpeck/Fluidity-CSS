grid-width = 90%
grid-min-width = 960px
base-font-size = 16px
base-line-height = 1.35em
base-color = #353536
vendors = webkit moz o ms official
@import "fluidity"
@import "fluidity/elements"
@import "fluidity/forms"

body
  background-color lighter-color3
  margin-top 62px
  color base-color

a
  color darken(lighter-color1,40%)
  border-bottom 1px solid darken(lighter-color1,40%)
  text-decoration none

h1,h2,h3,h4,h5
  font-weight normal

h6
  color darken(lighter-color1,30%)
  margin-bottom .25em
  font-size .8em
  font-weight normal
  text-transform uppercase

h1
  border-bottom 1px solid base-color
  padding-bottom .825em
  margin-bottom 0

.important-note
  background-color darker-color3
  color white
  padding 8px 0px
  margin 1em 2em
  font-size 0.9em
  border-radius 0px 0px 10px 0px
  p
    padding 0
    margin 0 1em
  a
    color lighter-color3

.topbar-inner
  .logo-animation
    grid-space(50%)
    h1
      display block
      position relative
      top 0
      border none
      color base-color
      font-size 1.95em
      cursor pointer
      text-shadow 0 1px 1px lighter-color3
      margin-top .725em
  .navigation
    grid-space(50%)
    .pills-holder
      width 450px
      margin 0 auto
      #github
        img
          display inline
          position relative
          float left

.container
  grid()
  background-color white
  border 1px solid lighten(darker-color3,60%)
  box-shadow 0 0 46px lighter-color2

header
  grid_100()
  color base-color
  background radial-gradient(ellipse farthest-corner at top left,lighter-color3 0%,lighter-color2 40%,lighter-color1 70%, lighter-color2 100%)
  large()
  border-bottom 1px solid lighten(darker-color3,45%)
  .header-inner
    width 95.825%
    margin 18px
    padding 0px
    border 1px solid base-color
    z-index 4
    h4
       margin .8em 1em .2em 4em
    h5
       margin .2em 1em 1.2em 4.8em
       line-height 1.05em
    h1
      font-size 2em
      margin 1em 0 .15em 1em
      padding-bottom .925em
      text-shadow 0 0 88px white, 0 0 108px white, 0 0 128px white

