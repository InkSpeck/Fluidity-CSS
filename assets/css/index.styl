    top -24px  
    margin 0
    padding 0

footer
  background radial-gradient(ellipse farthest-corner at top left,lightgray2 0%,lightgray1 40%,lightgray3 70%, lightgray2 100%)
  #copyright
    grid-space(100%)
    font-size .8em
    border-top 1px solid darken(lightgray1, 10%)
    p  
      margin 0.7em 1em 1em 1em
      text-align center
  

// Animation Elements
.shown
  opacity 1 !important

//Topbar Helixes

.topbar-inner
  .logo-animation
    .stage
      position absolute
      display block  
      top 0
      left 0
      display block
      width 99%
      height 100%
      opacity 0
      transition all .2s linear
      overflow hidden  
      .square-x
        position absolute
        left 89px
        top 26px
        display block
        width 40px
        height 200px
        z-index 2
        animation-name topbar-square-x
        animation-duration 3s
        animation-timing-function linear
        animation-delay 0s
        animation-iteration-count infinite
      .square-y
        display block
        width 40px
        height 40px
        z-index 2
        animation-name topbar-square-y
        animation-duration 3s
        animation-timing-function ease-in-out
        animation-delay 0s
        animation-iteration-count infinite
      .square
        display block
        width 5px
        height 5px
        background-color darken(lightgray1,20%)
      .square2-x
        position absolute
        left 89px
        top 26px
        display block
        width 40px
        height 200px
        z-index 2
        animation-name topbar-square-x
        animation-duration 3s
        animation-timing-function linear
        animation-delay 0s
        animation-iteration-count infinite
      .square2-y
        display block
        width 40px
        height 40px
        z-index 2
        animation-name topbar-square2-y
        animation-duration 3s
        animation-timing-function ease-in-out
        animation-delay 0s
        animation-iteration-count infinite
      .square2
        display block
        width 5px
        height 5px
        background-color white

