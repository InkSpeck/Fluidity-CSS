  .paragraphs
    grid-space(44%)
  .lists-1
    grid-space(33%)
  .lists-2
    grid-space(33%)
  .lists-3
    grid-space(34%)
  .blockquotes
    grid-space(33%)
  .code-blocks
    grid-space(33%)
