grid-width = 90%
grid-min-width = 960px
base-font-size = 1em  
base-line-height = 1.35em  
vendors = webkit moz o ms official
@import "fluidity"
@import "fluidity/elements" 
@import "fluidity/forms" 

body
  background-color lightgray3
  margin-top 62px 
  color color

a
  color black

h6
  color darken(lightgray1,30%)
  margin-bottom .25em  

h1
  border-bottom 1px solid color
  padding-bottom .825em
  margin-bottom 0

.important-note
